<% flash.each do |key, value| %>
  <div class="<%= flash_class(key) %>">
    <%= value %>
  </div>
<% end %>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="login-panel panel panel-default">
      <div class="panel-heading">
          <h3 class="panel-title horizontal-padding">Please sign in !</h3>
      </div>
      <div class="panel-body">
        <%= form_tag sessions_path do %>
          <fieldset>
            <div class="form-group horizontal-padding">
            <label for="exampleInputEmail1">User name</label><br/>
              <%= text_field_tag :user_name, "", id: 'name', placeholder: "Login" %>
            </div>

            <div class="form-group horizontal-padding">
            <label for="exampleInputEmail1">Password</label><br/>
              <%= password_field_tag :password, "", id: 'password', placeholder: "Senha"  %>
            </div>
            <div class="button horizontal-padding">
            <%= submit_tag "Login", class:"btn btn-lg btn-success btn-block" %>
            </div>
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>

