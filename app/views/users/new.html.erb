<% flash.each do |key, value| %>
      <div class="<%= flash_class(key) %>">
            <%= value %>
      </div>
<% end %>
  <div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="login-panel panel panel-default">
      <div class="panel-heading">
          <h3 class="panel-title horizontal-padding">Please sign up !</h3>
      </div>
      <div class="panel-body">
        <%= form_tag(@user, url: users_path(@user)) do %>
        <fieldset>
          <div class="form-group horizontal-padding">
          <label for="exampleInputEmail1">Full Name</label><br/>
            <%= text_field_tag :full_name %>
          </div>
          <div class="form-group horizontal-padding">
          <label for="exampleInputEmail1">User name</label><br/>
            <%= text_field_tag :user_name %>
          </div>
          <div class="form-group col-md-4 horizontal-padding">
          <label for="exampleInputEmail1">Role</label><br/>
             <%= select_tag :role, options_for_select([["Select One", ""], "admin", "user", ]), {:class => 'form-control'}  %>
          </div>
          <div class="form-group horizontal-padding">
          <label for="exampleInputEmail1">Password</label><br/>
            <%= password_field_tag :password %>
          </div>
          <div class="button horizontal-padding">
            <%= submit_tag "Sign up", class:"btn btn-lg btn-success btn-block" %>
          </div>
          </fieldset>
        <% end %>
    </div>
  </div>
</div>